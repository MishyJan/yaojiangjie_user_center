{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@abp/*": ["../node_modules/abp-ng2-module/src/*"],
      "@admin/*": ["./admin/*"],
      "@shared/*": ["./shared/*"],
      "@node_modules/*": ["../node_modules/*"],
      "@sass/*": ["./sass/*"],
      "@assets/*": ["./assets/common/js/*"],
      "@angular/*": ["../node_modules/@angular/*"]

    }
  },
  "exclude": ["node_modules"]
}