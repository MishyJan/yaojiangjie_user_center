{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"],
            "@node_modules/*": ["./node_modules/*"],
            "@sass/*": ["./src/sass/*"],
            "@assets/*": ["./src/assets/*"]
        },
        "lib": [
            "es2017",
            "dom"
        ]
    }
}